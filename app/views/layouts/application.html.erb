<!DOCTYPE html>
<html>
  <head>
    <title>Blog</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <% if rand > 0.5 %>
      <%= 'malo' %>
    <% else %>
      <%= 'duzo' %>
    <%end%>


    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="navigation">
      <% if user_signed_in? %>
      Witaj, <%= current_user.email %>
      <%= link_to 'Wyloguj', destroy_user_session_path, method: :delete %>
    <% else %>
      Witaj!
      <%= link_to 'Zaloguj sie', new_user_session_path %>
    <% end %>


    <div class="flash">
      <% flash.each do |k, v| %>
        <div>
          <strong><%= t "flash.#{k}" %></strong>
          <%= v %>
        </div>
      <% end %>
    </div>
    <%= yield %>
  </body>
</html>
